}

boolean rowRegEditDelete (any opt_id, string opt_key)``{
    reg_file = maplist(map<string, any> s, reg_file, {
     if (haskey(s, opt_id))
      {
        s[tostring(opt_id), "VALUE"] = "";
        s[tostring(opt_id), "KEY"] = "";
      }
        return s;
    });
 return true;
}

